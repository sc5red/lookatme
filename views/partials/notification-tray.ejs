<aside class="w-full max-h-[600px] bg-white dark:bg-gray-800 p-4 shadow-sm border border-gray-200 dark:border-gray-700 flex flex-col rounded-xl" id="notification-tray">
  <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 pb-2 border-b border-gray-100 dark:border-gray-700">Notifications</h2>
  <!-- Loading Skeleton -->
  <div id="notifications-skeleton" class="flex-1 space-y-3">
    <div class="animate-pulse space-y-4">
      <% for (let i = 0; i < 4; i++) { %>
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-gray-300 dark:bg-gray-600 rounded-full"></div>
          <div class="flex-1 space-y-2 pt-1">
            <div class="h-3 bg-gray-300 dark:bg-gray-600 rounded w-3/4"></div>
            <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded w-1/2"></div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <!-- Loaded notifications list (hidden initially) -->
  <div id="notifications-list" class="flex-1 hidden overflow-y-auto"></div>
  <div class="mt-4 text-center text-xs text-gray-500 dark:text-gray-400 select-none">Static placeholder â€“ logic TBD</div>
</aside>
