<!-- Posts Feed Component -->
<div class="flex-1 overflow-hidden mt-9">
  <div id="feed-scroll-container" class="relative h-full border-2 border-dashed border-gray-300 dark:border-gray-700 rounded-2xl bg-gray-50/50 dark:bg-gray-900/20 p-6 overflow-y-auto">
    <!-- Feed Header -->
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100">Posts Feed</h2>
      <button id="scroll-to-top-btn" class="hidden px-3 py-1.5 text-xs font-medium rounded-lg bg-blue-500 hover:bg-blue-600 text-white transition-all shadow-md hover:shadow-lg">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
      </button>
    </div>

    <!-- Feed Container -->
    <div id="posts-feed-container" class="space-y-4">
      <!-- Posts will be injected here -->
    </div>

    <!-- Empty State -->
    <div id="feed-empty-state" class="flex flex-col items-center justify-center py-16 text-center">
      <div class="w-20 h-20 rounded-full bg-gray-200 dark:bg-gray-800 flex items-center justify-center mb-4">
        <svg class="w-10 h-10 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-300 mb-2">No posts yet</h3>
      <p class="text-sm text-gray-500 dark:text-gray-400">Be the first to share something!</p>
    </div>

    <!-- Loading State -->
    <div id="feed-loading-state" class="hidden space-y-4">
      <% for (let i = 0; i < 3; i++) { %>
        <div class="animate-pulse bg-white dark:bg-gray-800 rounded-xl p-4 border border-gray-200 dark:border-gray-700">
          <div class="flex items-start gap-3 mb-3">
            <div class="w-10 h-10 rounded-full bg-gray-300 dark:bg-gray-600"></div>
            <div class="flex-1 space-y-2">
              <div class="h-3 bg-gray-300 dark:bg-gray-600 rounded w-1/4"></div>
              <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded w-1/6"></div>
            </div>
          </div>
          <div class="space-y-2">
            <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
            <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Load More Button -->
    <div class="text-center mt-6">
      <button id="feed-load-more-btn" class="hidden px-6 py-2 text-sm font-medium rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 transition-colors">
        Load More Posts
      </button>
    </div>
  </div>
</div>
