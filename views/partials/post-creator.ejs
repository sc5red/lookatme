<!-- Post Creator Component -->
<div class="mt-2 mb-6 shrink-0">
  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl shadow-lg p-5 transition-colors">
    <!-- User Avatar & Input -->
    <div class="flex items-start gap-4">
      <div class="w-11 h-11 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white font-semibold text-sm select-none shrink-0">
        <%= user.name.charAt(0).toUpperCase() %>
      </div>
      
      <div class="flex-1 flex flex-col gap-3">
        <!-- Text Input -->
        <textarea 
          id="post-text-input" 
          maxlength="100" 
          placeholder="What's on your mind?"
          class="w-full resize-none min-h-[56px] max-h-32 text-base p-3 rounded-xl bg-gray-50 dark:bg-gray-900/50 border border-gray-200 dark:border-gray-700 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all placeholder:text-gray-400 dark:placeholder:text-gray-500"
          rows="2"
        ></textarea>

        <!-- Media Preview Area -->
        <div id="media-preview-container" class="hidden">
          <!-- Audio Preview -->
          <div id="audio-preview" class="hidden bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-900/80 dark:to-gray-800/80 rounded-xl p-4 border border-blue-200 dark:border-blue-900/50">
            <div class="flex items-center gap-3">
              <button id="audio-play-btn" class="w-10 h-10 rounded-full bg-blue-500 hover:bg-blue-600 flex items-center justify-center text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
                </svg>
              </button>
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Voice Message</span>
                  <span id="audio-duration" class="text-xs text-gray-500 dark:text-gray-400">0:00</span>
                </div>
                <div class="w-full h-8 bg-white dark:bg-gray-800 rounded-lg overflow-hidden" id="audio-waveform"></div>
              </div>
              <button id="audio-remove-btn" class="w-8 h-8 rounded-full hover:bg-red-100 dark:hover:bg-red-900/30 flex items-center justify-center text-red-500 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </div>
          </div>

          <!-- Image Preview -->
          <div id="image-preview" class="hidden relative rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700">
            <img id="image-preview-img" class="w-full h-auto max-h-72 object-cover" alt="Preview">
            <button id="image-remove-btn" class="absolute top-2 right-2 w-8 h-8 rounded-full bg-black/60 hover:bg-black/80 flex items-center justify-center text-white transition-colors backdrop-blur-sm">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <!-- GIF Preview -->
          <div id="gif-preview" class="hidden relative rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700">
            <img id="gif-preview-img" class="w-full h-auto max-h-72 object-cover" alt="GIF">
            <div class="absolute top-2 left-2 px-2 py-1 rounded-md bg-black/60 backdrop-blur-sm">
              <span class="text-xs font-semibold text-white">GIF</span>
            </div>
            <button id="gif-remove-btn" class="absolute top-2 right-2 w-8 h-8 rounded-full bg-black/60 hover:bg-black/80 flex items-center justify-center text-white transition-colors backdrop-blur-sm">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Action Bar -->
        <div class="flex items-center justify-between pt-2 border-t border-gray-200 dark:border-gray-700">
          <!-- Media Buttons -->
          <div class="flex items-center gap-1">
            <!-- Voice Recording Button -->
            <button id="voice-btn" class="group relative w-9 h-9 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/20 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" title="Record voice">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
              </svg>
            </button>

            <!-- Image Upload Button -->
            <button id="image-btn" class="group relative w-9 h-9 rounded-lg hover:bg-green-50 dark:hover:bg-green-900/20 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-green-600 dark:hover:text-green-400 transition-colors" title="Add image">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </button>

            <!-- GIF Button -->
            <button id="gif-btn" class="group relative w-9 h-9 rounded-lg hover:bg-purple-50 dark:hover:bg-purple-900/20 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors" title="Add GIF">
              <span class="text-xs font-bold">GIF</span>
            </button>

            <!-- Emoji Button (placeholder) -->
            <button id="emoji-btn" class="group relative w-9 h-9 rounded-lg hover:bg-yellow-50 dark:hover:bg-yellow-900/20 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-400 transition-colors" title="Add emoji">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </button>
          </div>

          <!-- Character Counter & Post Button -->
          <div class="flex items-center gap-3">
            <span id="char-counter" class="text-xs font-medium text-gray-500 dark:text-gray-400">0/100</span>
            <button id="post-submit-btn" class="px-5 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 disabled:bg-gray-300 dark:disabled:bg-gray-700 disabled:cursor-not-allowed text-white text-sm font-semibold transition-colors shadow-sm disabled:shadow-none" disabled>
              Post
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Error Message -->
    <div id="post-error" class="hidden mt-3 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-900/50 rounded-lg">
      <p class="text-xs text-red-600 dark:text-red-400"></p>
    </div>
  </div>
</div>

<!-- Voice Recording Modal -->
<div id="voice-modal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 p-4" style="display: none;">
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-md w-full p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Record Voice Message</h3>
      <button id="voice-modal-close" class="w-8 h-8 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center text-gray-500 dark:text-gray-400 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Recording UI -->
    <div class="flex flex-col items-center gap-6">
      <div id="recording-timer" class="text-4xl font-mono font-bold text-gray-900 dark:text-gray-100">0:00</div>
      
      <!-- Waveform Visualization -->
      <div class="w-full h-20 bg-gray-100 dark:bg-gray-900 rounded-xl flex items-center justify-center overflow-hidden" id="recording-waveform">
        <div class="flex items-center gap-1 h-full px-4" id="waveform-bars">
          <!-- Animated bars will be injected here -->
        </div>
      </div>

      <!-- Record Button -->
      <button id="record-toggle-btn" class="w-16 h-16 rounded-full bg-red-500 hover:bg-red-600 active:bg-red-700 flex items-center justify-center text-white shadow-lg transition-all transform hover:scale-105 active:scale-95">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
          <circle cx="10" cy="10" r="6"/>
        </svg>
      </button>

      <p id="recording-status" class="text-sm text-gray-600 dark:text-gray-400">Tap to start recording</p>

      <!-- Action Buttons -->
      <div id="recording-actions" class="hidden gap-3 w-full" style="display: none;">
        <button id="voice-cancel-btn" class="flex-1 px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium transition-colors">
          Cancel
        </button>
        <button id="voice-save-btn" class="flex-1 px-4 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-medium transition-colors">
          Use Recording
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Image Upload Modal -->
<div id="image-modal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 p-4" style="display: none;">
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-lg w-full p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Add Image</h3>
      <button id="image-modal-close" class="w-8 h-8 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center text-gray-500 dark:text-gray-400 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Upload Options -->
    <div class="grid grid-cols-2 gap-4 mb-4">
      <label for="file-upload" class="flex flex-col items-center justify-center p-6 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl hover:border-blue-500 dark:hover:border-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/10 cursor-pointer transition-all group">
        <svg class="w-10 h-10 text-gray-400 group-hover:text-blue-500 dark:group-hover:text-blue-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Upload File</span>
        <input type="file" id="file-upload" accept="image/*" class="hidden">
      </label>

      <button id="camera-btn" class="flex flex-col items-center justify-center p-6 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl hover:border-green-500 dark:hover:border-green-400 hover:bg-green-50 dark:hover:bg-green-900/10 cursor-pointer transition-all group">
        <svg class="w-10 h-10 text-gray-400 group-hover:text-green-500 dark:group-hover:text-green-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Take Photo</span>
      </button>
    </div>

    <!-- Camera View (hidden by default) -->
    <div id="camera-view" class="hidden">
      <video id="camera-stream" class="w-full rounded-xl bg-black" autoplay playsinline></video>
      <div class="flex gap-3 mt-4">
        <button id="camera-cancel-btn" class="flex-1 px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium transition-colors">
          Cancel
        </button>
        <button id="camera-capture-btn" class="flex-1 px-4 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-medium transition-colors">
          Capture
        </button>
      </div>
    </div>
  </div>
</div>

<!-- GIF Picker Modal -->
<div id="gif-modal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 p-4" style="display: none;">
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-3xl w-full max-h-[80vh] flex flex-col">
    <!-- Header -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700 shrink-0">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Choose a GIF</h3>
      <button id="gif-modal-close" class="w-8 h-8 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center text-gray-500 dark:text-gray-400 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Search Bar -->
    <div class="p-4 border-b border-gray-200 dark:border-gray-700 shrink-0">
      <input 
        type="text" 
        id="gif-search-input" 
        placeholder="Search GIFs..." 
        class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-900 border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
      >
    </div>

    <!-- Tabs -->
    <div class="flex gap-4 px-6 pt-4 shrink-0">
      <button class="gif-tab active px-3 py-1 text-sm font-medium rounded-lg transition-colors" data-tab="trending">Trending</button>
      <button class="gif-tab px-3 py-1 text-sm font-medium rounded-lg transition-colors" data-tab="favorites">Favorites</button>
    </div>

    <!-- GIF Grid -->
    <div class="flex-1 overflow-y-auto p-6">
      <div id="gif-grid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
        <!-- GIFs will be loaded here -->
        <div class="col-span-full text-center py-8 text-gray-500 dark:text-gray-400">
          <div class="animate-pulse">Loading GIFs...</div>
        </div>
      </div>
    </div>

    <!-- Powered by Badge -->
    <div class="p-4 border-t border-gray-200 dark:border-gray-700 text-center shrink-0">
      <p class="text-xs text-gray-500 dark:text-gray-400">Powered by <span class="font-semibold">Tenor</span></p>
    </div>
  </div>
</div>

<!-- Hidden file inputs -->
<input type="file" id="hidden-file-input" accept="image/*" class="hidden">
<canvas id="camera-canvas" class="hidden"></canvas>
