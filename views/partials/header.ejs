<header class="flex items-center bg-gray-200 dark:bg-gray-800 rounded-2xl p-2 md:p-4 m-4">
  <div class="flex-1">
    <a href="/" class="brand text-2xl font-bold tracking-wider focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-sm">LookAtMe</a>
  </div>
  <% if (user) { %>
  <nav class="flex gap-4 justify-center flex-1">
    <button class="<%= activePage==='home' ? 'bg-blue-500 text-white' : 'bg-transparent text-gray-900 dark:text-gray-100 hover:bg-gray-300 dark:hover:bg-gray-600' %> border-none text-base px-4 py-2 cursor-pointer rounded transition-colors duration-200" onclick="location.href='/'">Home</button>
    <button class="<%= activePage==='messages' ? 'bg-blue-500 text-white' : 'bg-transparent text-gray-900 dark:text-gray-100 hover:bg-gray-300 dark:hover:bg-gray-600' %> border-none text-base px-4 py-2 cursor-pointer rounded transition-colors duration-200" onclick="location.href='/messages'">Messages</button>
    <button class="<%= activePage==='friends' ? 'bg-blue-500 text-white' : 'bg-transparent text-gray-900 dark:text-gray-100 hover:bg-gray-300 dark:hover:bg-gray-600' %> border-none text-base px-4 py-2 cursor-pointer rounded transition-colors duration-200" onclick="location.href='/friends'">Friends</button>
  </nav>
  <div class="flex-1 flex justify-end">
    <div class="relative" id="user-menu-container">
      <button id="user-menu-button" class="flex items-center gap-2 bg-transparent border-none text-gray-900 dark:text-gray-100 text-sm px-3 py-2 cursor-pointer rounded hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200">
        <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center">
          <span class="text-white text-xs font-medium"><%= user.name.charAt(0).toUpperCase() %></span>
        </div>
        <span><%= user.name %></span>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
      <div id="user-menu" class="hidden absolute right-0 mt-2 w-56 bg-white dark:bg-gray-700 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-600 z-50">
        <div class="py-2">
          <a href="/profile" class="flex items-center gap-3 px-4 py-3 text-sm <%= activePage==='profile' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600' %> transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
            </svg>
            Profile
          </a>
          <a href="/settings" class="flex items-center gap-3 px-4 py-3 text-sm <%= activePage==='settings' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600' %> transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
            </svg>
            Settings
          </a>
          <div class="border-t border-gray-200 dark:border-gray-600 my-2"></div>
          <button id="theme-toggle" class="flex items-center justify-between w-full px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-left">
            <div class="flex items-center gap-3">
              <svg id="theme-icon" class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path id="sun-icon" fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
                <path id="moon-icon" class="hidden" fill-rule="evenodd" d="M17.293 13.293A8 8 0 0 1 6.707 2.707a8.001 8.001 0 1010.586 10.586z" clip-rule="evenodd"/>
              </svg>
              <span id="theme-text">Theme</span>
            </div>
            <div class="w-10 h-6 bg-gray-300 dark:bg-gray-600 rounded-full relative transition-colors">
              <div id="theme-switch" class="w-4 h-4 bg-white rounded-full absolute top-1 left-1 transition-transform ease-in-out duration-300 transform"></div>
            </div>
          </button>
          <div class="border-t border-gray-200 dark:border-gray-600 my-2"></div>
          <button onclick="logout()" class="flex items-center gap-3 w-full px-4 py-3 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors text-left">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 01-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"/>
            </svg>
            Logout
          </button>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</header>
