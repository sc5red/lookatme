<header class="bg-white dark:bg-black border-b border-gray-200 dark:border-gray-800 transition-colors mt-0  p-0">
  <div class="max-w-7xl mx-auto px-4 py-0">
    <div class="flex items-center justify-between h-12">
      <!-- Logo & Brand -->
      <div class="flex items-center gap-4">
        <div class="text-2xl">ðŸ‘‘</div>
        <div>
          <h1 class="text-xl font-bold text-gray-900 dark:text-white">Admin Panel</h1>
          <p class="text-xs text-gray-500 dark:text-gray-400">LookAt.me</p>
        </div>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        <a 
          href="/admin/dashboard" 
          class="<%= activePage === 'dashboard' ? 'text-red-500 font-semibold' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white' %> transition-colors"
        >
          Dashboard
        </a>
        <a 
          href="/admin/users" 
          class="<%= activePage === 'users' ? 'text-red-500 font-semibold' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white' %> transition-colors"
        >
          Users
        </a>
        <a 
          href="/admin/posts" 
          class="<%= activePage === 'posts' ? 'text-red-500 font-semibold' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white' %> transition-colors"
        >
          Posts
        </a>
      </nav>

      <!-- User Menu -->
      <div class="flex items-center gap-4">
        <!-- Theme Toggle -->
        <button 
          id="admin-theme-toggle"
          class="flex items-center gap-2 px-3 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors"
          title="Toggle Theme"
        >
          <svg id="admin-sun-icon" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
          </svg>
          <svg id="admin-moon-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" clip-rule="evenodd"/>
          </svg>
          <span id="admin-theme-text" class="text-sm hidden lg:inline">Theme</span>
        </button>
        
        <div class="text-right hidden sm:block">
          <p class="text-sm font-medium text-gray-900 dark:text-white"><%= user.name %></p>
          <p class="text-xs text-gray-500 dark:text-gray-400"><%= user.email %></p>
        </div>
        <form action="/admin/logout" method="POST">
          <button 
            type="submit" 
            class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm"
          >
            Logout
          </button>
        </form>
      </div>
    </div>
  </div>
</header>
