<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - LookAt.me</title>
  <script>
    // Early theme application to prevent flash
    (function() {
      try {
        const stored = localStorage.getItem('admin-theme');
        if (stored === 'dark') {
          document.documentElement.classList.add('dark');
        } else if (stored === 'light') {
          document.documentElement.classList.remove('dark');
        }
      } catch(e) {}
    })();
  </script>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors m-0 p-0">
  <%- include('admin-header', { user, activePage: 'dashboard' }) %>

  <main class="max-w-7xl mx-auto px-4 py-8">
    <!-- Welcome Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Welcome back, <%= user.name %>! üëë</h1>
      <p class="text-gray-600 dark:text-gray-400">Admin Dashboard - System Overview</p>
    </div>

    <!-- Statistics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Users -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
        <div class="flex items-center justify-between mb-4">
          <div class="bg-blue-500/10 p-3 rounded-lg">
            <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <span class="text-2xl font-bold text-blue-500"><%= stats.totalUsers %></span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">Total Users</p>
      </div>

      <!-- Total Posts -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
        <div class="flex items-center justify-between mb-4">
          <div class="bg-green-500/10 p-3 rounded-lg">
            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
            </svg>
          </div>
          <span class="text-2xl font-bold text-green-500"><%= stats.totalPosts %></span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">Total Posts</p>
      </div>

      <!-- Online Users -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
        <div class="flex items-center justify-between mb-4">
          <div class="bg-emerald-500/10 p-3 rounded-lg">
            <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.636 18.364a9 9 0 010-12.728m12.728 0a9 9 0 010 12.728m-9.9-2.829a5 5 0 010-7.07m7.072 0a5 5 0 010 7.07M13 12a1 1 0 11-2 0 1 1 0 012 0z"/>
            </svg>
          </div>
          <span class="text-2xl font-bold text-emerald-500"><%= stats.onlineUsers %></span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">Online Now</p>
      </div>

      <!-- Admin Users -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
        <div class="flex items-center justify-between mb-4">
          <div class="bg-red-500/10 p-3 rounded-lg">
            <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <span class="text-2xl font-bold text-red-500"><%= stats.adminUsers %></span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">Administrators</p>
      </div>
    </div>

    <!-- User Roles Breakdown -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
        <div class="flex items-center gap-3 mb-2">
          <span class="text-2xl">‚≠ê</span>
          <div>
            <p class="text-lg font-bold text-gray-900 dark:text-white"><%= stats.premiumUsers %></p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Premium Users</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
        <div class="flex items-center gap-3 mb-2">
          <span class="text-2xl">üì¢</span>
          <div>
            <p class="text-lg font-bold text-gray-900 dark:text-white"><%= stats.advertiserUsers %></p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Advertisers</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
        <div class="flex items-center gap-3 mb-2">
          <span class="text-2xl">üë§</span>
          <div>
            <p class="text-lg font-bold text-gray-900 dark:text-white"><%= stats.totalUsers - stats.premiumUsers - stats.advertiserUsers - stats.adminUsers %></p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Regular Users</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Users -->
    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-colors">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Recent Registrations</h2>
      <div class="space-y-3">
        <% stats.recentUsers.forEach(user => { %>
        <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded-lg transition-colors">
          <div>
            <p class="text-gray-900 dark:text-white font-medium"><%= user.name %></p>
            <p class="text-gray-600 dark:text-gray-400 text-sm"><%= user.email %></p>
          </div>
          <p class="text-gray-500 dark:text-gray-500 text-sm"><%= new Date(user.created_at).toLocaleDateString() %></p>
        </div>
        <% }) %>
      </div>
    </div>
  </main>
  
  <script src="/js/admin-theme.js"></script>
</body>
</html>
