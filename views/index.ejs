<!DOCTYPE html>
<html lang="en" <%- (typeof themeClass !== 'undefined' ? themeClass : '') %>>
<%- include('partials/head', { pageTitle: 'Home' }) %>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
  <%- include('partials/header', { user, activePage: 'home' }) %>
    <main class="m-10 flex gap-6">
        <!-- Friends Online Panel -->
        <aside class="w-64 bg-white dark:bg-gray-800 rounded-2xl p-4 shadow-sm border border-gray-200 dark:border-gray-700 h-80 flex flex-col">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 pb-2 border-b border-gray-100 dark:border-gray-700">Friends Online</h2>
            
            <!-- Loading Skeleton -->
            <div id="friends-skeleton" class="flex-1 space-y-3">
                <div class="animate-pulse">
                    <div class="flex items-center space-x-3 mb-3">
                        <div class="w-8 h-8 bg-gray-300 rounded-full"></div>
                        <div class="flex-1">
                            <div class="h-3 bg-gray-300 rounded w-3/4 mb-1"></div>
                            <div class="h-2 bg-gray-200 rounded w-1/2"></div>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3 mb-3">
                        <div class="w-8 h-8 bg-gray-300 rounded-full"></div>
                        <div class="flex-1">
                            <div class="h-3 bg-gray-300 rounded w-2/3 mb-1"></div>
                            <div class="h-2 bg-gray-200 rounded w-1/3"></div>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-gray-300 rounded-full"></div>
                        <div class="flex-1">
                            <div class="h-3 bg-gray-300 rounded w-1/2 mb-1"></div>
                            <div class="h-2 bg-gray-200 rounded w-1/4"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- hidden -->
            <div id="friends-list" class="flex-1 hidden">
            </div>
        </aside>
    </main>
    
    <script src="/js/script.js"></script>

</body>
</html>