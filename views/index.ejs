<!DOCTYPE html>
<html lang="en" <%- (typeof themeClass !== 'undefined' ? themeClass : '') %>>
<%- include('partials/head', { pageTitle: 'Home' }) %>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
  <%- include('partials/header', { user, activePage: 'home' }) %>
  <main class="w-full h-[calc(100vh-56px)] p-2">
    <div class="w-full h-full flex gap-5 xl:gap-6 overflow-hidden">
      <!-- Left side panels -->
      <div class="flex w-64 2xl:w-72 shrink-0 flex-col gap-3 overflow-y-auto h-full pr-2">
        <%- include('partials/remove-ads') %>
        <%- include('partials/friends-online') %>
        <%- include('partials/friend-suggestions') %>
      </div>
      
      <!-- Center column -->
      <div class="flex-1 flex flex-col overflow-hidden h-full mx-2">
        <%- include('partials/post-creator', { user }) %>
        <%- include('partials/posts-feed') %>
      </div>
      
      <!-- Right side panels -->
      <div class="flex w-64 2xl:w-72 shrink-0 flex-col overflow-y-auto h-full">
        <%- include('partials/notification-tray') %>
      </div>
    </div>
  </main>
  <script src="/js/post-creator.js"></script>
  <script src="/js/posts-feed.js"></script>
    
    <script src="/js/script.js"></script>

</body>
</html>